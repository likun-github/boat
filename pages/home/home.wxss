/* pages/home/home.wxss */
.container{
  position: absolute;
  width: 100%;
  height: 100%;
  
}
.search{
  position: relative;
  width: 700rpx;
  margin-left: 25rpx;
  height: 50rpx;
  border-radius: 25rpx;
  background-color: rgba(200, 200, 200, 0.5);
  
}
.content{
  position: relative;
  width: 100%;
  height: 90%;
  background-color: yellow;
  display: flex;
  flex-direction: row;
}
.content .left{
  position: relative;
  width: 200rpx;
  height: 100%;
  background-color: #F3F3F3;
}
.content .right{
  position: relative;
  width: 550rpx;
  height: 100%;
  background-color: white;
}
.leftlist{
  position: relative;
  text-align: center;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: solid 1rpx white;
}
.active{
  color: red;
}
.rightlist{
  position: relative;
  width: 100%;
  height: 200rpx;
  background-color: yellow;
  display: flex;
  flex-direction: row;
}
.right_image{
  position: relative;
  width: 150rpx;
  height: 150rpx;

}
.right_text{
  position: relative;
  display: flex;
  flex-direction: column;
}